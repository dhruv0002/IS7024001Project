@page
@model Project.Pages.BreweriesPageModel
@{
    ViewData["Title"] = "Brewery page";
}

<h3>Breweries you can order from while exploring your favorite nobel laureates and playing the quiz game.</h3>

@if (Model.BreweryList != null && Model.BreweryList.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BreweryList[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BreweryList[0].BreweryType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BreweryList[0].Street)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BreweryList[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BreweryList[0].State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BreweryList[0].PostalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BreweryList[0].Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BreweryList[0].Phone)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BreweryList)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BreweryType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="row">
        <div class="col">
            <div class="alert alert-info">
                No results for Brewery
            </div>
        </div>
    </div>
}