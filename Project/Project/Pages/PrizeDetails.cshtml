@page
@model Project.Pages.DetailsModel
@{
}

<h1>Prize Details for @Html.DisplayFor(model => model.NobelLaureates.Laureates[0].Firstname) @Html.DisplayFor(model => model.NobelLaureates.Laureates[0].Surname)</h1>


<hr />

@if (Model.SearchCompleted)
{
    <h3>Prizes</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].Prizes[0].Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].Prizes[0].Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].Prizes[0].Share)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].Prizes[0].Motivation)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.NobelLaureates.Laureates[0].Prizes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Share)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Motivation)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />

    
}
else
{
    <div class="row">
        <div class="col">
            <div class="alert alert-info">
                No prize for the particular laureate
            </div>
        </div>
    </div>
}