@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Know Your Favorite Nobel Laureate</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="get">
            <div class="form-group">
                <label class="control-label"></label>
                <select asp-for="Query" class="form-control" asp-items="ViewBag.Code"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>