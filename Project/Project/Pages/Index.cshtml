@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Know Your Favorite Nobel Laureate</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="get">
            <div class="form-group">
                <label class="control-label"></label>
                <select asp-for="Query" class="form-control" asp-items="ViewBag.Code"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.SearchCompleted)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].Firstname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].Born)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].Died)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].BornCountry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].BornCountryCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].BornCity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].DiedCountry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].DiedCountryCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].DiedCity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NobelLaureates.Laureates[0].Gender)
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
}